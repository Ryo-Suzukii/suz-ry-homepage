{
  "$schema": "https://biomejs.dev/schemas/latest/schema.json",
  "files": {
    "maxSize": 10485760
  },
  "linter": {
    "rules": {
      "a11y": "on",
      "complexity": "on",
      "correctness": {
        "noUndeclaredDependencies": "off"
      },
      "nursery": "on",
      "performance": "on",
      "security": "on",
      "style": "on",
      "suspicious": {
        "noConsole": "info"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "useSortedAttributes": "on",
        "useSortedProperties": "on"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 160
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded"
    }
  },
  "html": {
    "formatter": {
      "enabled": true
    }
  },
  "overrides": [
    {
      "includes": ["**/*.vue"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedVariables": "off",
            "noUnusedImports": "off",
            "useHookAtTopLevel": "off"
          },
          "style": {
            "useConst": "off",
            "useImportType": "off"
          }
        }
      },
      "assist": {
        "enabled": false
      }
    }
  ]
}
